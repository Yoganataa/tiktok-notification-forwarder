{
  "name": "tiktok-notification-forwarder",
  "version": "2.1.0",
  "description": "Production-ready Discord bot to forward TikTok notifications",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && cp -r src/core/database/migrations dist/core/database/",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit"
