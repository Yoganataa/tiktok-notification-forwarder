# Discord Configuration
OWNER_ID=your_discord_owner_id
DISCORD_TOKEN=your_bot_token
CLIENT_ID=your_client_id
SOURCE_BOT_IDS=123456789012345678,987654321098765432
CORE_SERVER_ID=your_main_server_id
EXTRA_GUILD_IDS=999999999999999999,888888888888888888
FALLBACK_CHANNEL_ID=your_log_channel_id
AUTO_CREATE_CATEGORY_ID=your_category_id_for_new_channels

# Downloader Configuration
DOWNLOAD_ENGINE=btch # Options: btch, tobyg74, yt-dlp, hans
AUTO_DOWNLOAD=true
COOKIE=your_tiktok_cookie_string # Required for search/stalk

# Database Configuration

# Option 1: SQLite (Default - File Based)
DATABASE_URL=sqlite://./database.sqlite
DB_DRIVER=sqlite

# Option 2: PostgreSQL (Uncomment jika ingin pakai PG)
# DATABASE_URL=postgres://username:password@localhost:5432/database_name
# DB_DRIVER=postgres

# Database Tuning
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=2
DB_SSL=false

# Application Settings
NODE_ENV=production
LOG_LEVEL=info
